From: MartijnMuijsers <martijnmuijsers@live.nl>
Date: Thu, 22 Sep 2022 13:09:54 +0200
Subject: [PATCH] Configurable villager reputation changes


diff --git a/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java b/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
index 262a0d7a68310decc15efc0bd085a869629ce689..86bff07535f0e542b18ca60fc21c86e96b8a5d1d 100644
--- a/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
+++ b/src/main/java/io/papermc/paper/configuration/WorldConfiguration.java
@@ -87,6 +87,51 @@ public class WorldConfiguration extends ConfigurationPart {
 
         // Suki end - minimum health after starving
 
+        // Suki start - configurable villager reputation changes
+
+        public VillagerReputationChanges villagerReputationChanges;
+
+        public class VillagerReputationChanges extends ConfigurationPart {
+
+            public Cured cured;
+
+            public class Cured extends ConfigurationPart {
+
+                public int majorPositive = 20;
+                public int minorPositive = 25;
+
+            }
+
+            public Trade trade;
+
+            public class Trade extends ConfigurationPart {
+
+                public int trading = 2;
+
+            }
+
+            public VillagerHurt villagerHurt;
+
+            public class VillagerHurt extends ConfigurationPart {
+
+                public int minorNegative = 25;
+                public int majorNegative = 0;
+
+            }
+
+            public VillagerKilled villagerKilled;
+
+            public class VillagerKilled extends ConfigurationPart {
+
+                public int minorNegative = 0;
+                public int majorNegative = 25;
+
+            }
+
+        }
+
+        // Suki end - configurable villager reputation changes
+
     }
 
     // Suki end - difficulty changes
diff --git a/src/main/java/net/minecraft/world/entity/npc/Villager.java b/src/main/java/net/minecraft/world/entity/npc/Villager.java
index 839e6a8819dfbfe8c54e116b5f5b23ded94e7ca1..1901c9f6165ec2cc77e97e86d127ede2016652b8 100644
--- a/src/main/java/net/minecraft/world/entity/npc/Villager.java
+++ b/src/main/java/net/minecraft/world/entity/npc/Villager.java
@@ -1000,26 +1000,51 @@ public class Villager extends AbstractVillager implements ReputationEventHandler
 
     @Override
     public void onReputationEventFrom(ReputationEventType interaction, Entity entity) {
+
+        // Suki start - configurable villager reputation changes
+
         if (interaction == ReputationEventType.ZOMBIE_VILLAGER_CURED) {
             // Paper start - fix MC-181190
             if (level.paperConfig().fixes.fixCuringZombieVillagerDiscountExploit) {
                 final GossipContainer.EntityGossips playerReputation = this.getGossips().getReputations().get(entity.getUUID());
                 if (playerReputation != null) {
-                    playerReputation.remove(GossipType.MAJOR_POSITIVE);
-                    playerReputation.remove(GossipType.MINOR_POSITIVE);
+                    if (level.paperConfig().difficultyChanges.villagerReputationChanges.cured.majorPositive > 0) {
+                        playerReputation.remove(GossipType.MAJOR_POSITIVE);
+                    }
+                    if (level.paperConfig().difficultyChanges.villagerReputationChanges.cured.minorPositive > 0) {
+                        playerReputation.remove(GossipType.MINOR_POSITIVE);
+                    }
                 }
             }
             // Paper end
-            this.gossips.add(entity.getUUID(), GossipType.MAJOR_POSITIVE, 20);
-            this.gossips.add(entity.getUUID(), GossipType.MINOR_POSITIVE, 25);
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.cured.majorPositive > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MAJOR_POSITIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.cured.majorPositive);
+            }
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.cured.minorPositive > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MINOR_POSITIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.cured.minorPositive);
+            }
         } else if (interaction == ReputationEventType.TRADE) {
-            this.gossips.add(entity.getUUID(), GossipType.TRADING, 2);
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.trade.trading > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.TRADING, level.paperConfig().difficultyChanges.villagerReputationChanges.trade.trading);
+            }
         } else if (interaction == ReputationEventType.VILLAGER_HURT) {
-            this.gossips.add(entity.getUUID(), GossipType.MINOR_NEGATIVE, 25);
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.villagerHurt.majorNegative > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MAJOR_NEGATIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.villagerHurt.majorNegative);
+            }
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.villagerHurt.minorNegative > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MINOR_NEGATIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.villagerHurt.minorNegative);
+            }
         } else if (interaction == ReputationEventType.VILLAGER_KILLED) {
-            this.gossips.add(entity.getUUID(), GossipType.MAJOR_NEGATIVE, 25);
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.villagerKilled.majorNegative > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MAJOR_NEGATIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.villagerKilled.majorNegative);
+            }
+            if (level.paperConfig().difficultyChanges.villagerReputationChanges.villagerKilled.minorNegative > 0) {
+                this.gossips.add(entity.getUUID(), GossipType.MINOR_NEGATIVE, level.paperConfig().difficultyChanges.villagerReputationChanges.villagerKilled.minorNegative);
+            }
         }
 
+        // Suki end - configurable villager reputation changes
+
     }
 
     @Override
